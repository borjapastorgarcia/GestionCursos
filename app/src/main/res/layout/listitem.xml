<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/person_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/star" />


    <Button
        android:id="@+id/btnSeguir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:alpha="0.85"
        android:background="@drawable/botonseguir"
        android:text="Ver   >"
        android:textColor="@color/cardview_light_background"
        android:translationZ="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/cardview_light_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TitleEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITULO"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dateEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha del evento"
                android:textColor="#6E6E6E"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/person_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localizacion del evento"
                android:textColor="#6E6E6E"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSiguiendo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Siguiendo"
                android:textColor="#04B486"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#D8D8D8" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_share"
                android:layout_gravity="right"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>